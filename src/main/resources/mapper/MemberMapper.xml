<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.redonearth.androidjsp.security.mapper.MemberMapper">

    <select id="readUser" parameterType="String" resultType="com.redonearth.androidjsp.security.domain.Member">
        SELECT * FROM user WHERE userID = #{userID}
    </select>

    <select id="readAuthority" parameterType="String" resultType="String">
        SELECT authority_id FROM authority WHERE userID = #{userID}
    </select>

</mapper>